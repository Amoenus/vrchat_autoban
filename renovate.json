{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "packageNames": ["*"],
      "pinVersions": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^pyproject\\.toml$"],
      "matchStrings": [
        "(?<=^dev-dependencies\\s*=\\s*\\[)[^\\]]*"
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "pep440",
      "extractVersionTemplate": "(?<=\"[^\"]+==)([^\"\\s]+)"
    }
  ]
}
